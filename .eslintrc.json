{
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "typelint"
  ],
  "settings": {
    "react": {
      "createClass": "createClass",
      "pragma": "React",
      "version": "15.0"
    },
    "typelint": {
      "models": {
        "redux": {
          "reducerPath": "./src/reducers/index.js"
        }
      },
      "useCache": true
    }
  },
  "rules": {
    "eol-last": 0,
    "new-cap": 0,
    "no-debugger": 0,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-empty": 1,
    "no-extra-semi": 1,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-regex-spaces": 1,
    "no-unexpected-multiline": 1,
    "no-underscore-dangle": 0,
    "no-unreachable": 1,
    "no-unsafe-negation": 1,
    "no-unused-vars": [
      "error",
      {
        "vars": "local",
        "args": "after-used",
        "caughtErrors": "all"
      }
    ],
    "no-use-before-define": 2,
    "valid-jsdoc": 1,
    "strict": 0,
    "quotes": [
      2, "single", "avoid-escape"
    ],
    "jsx-quotes": [
      1,
      "prefer-double"
    ],
    "react/jsx-no-undef": 1,
    "react/jsx-no-bind": 1,
    "react/jsx-no-duplicate-props": 2,
    "react/jsx-pascal-case": 2,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/display-name": [1, { "ignoreTranspilerName": true }],
    "typelint/typelint": 1
  }
}